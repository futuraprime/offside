.sans {
  font-family: 'calluna-sans', Helvetica Neue, Helvetica, sans-serif;
}
.serif {
  font-family: 'kepler-std', Georgia, serif;
}
.serif-display {
  font-family: 'kepler-std-display', Georgia, serif;
}

body {
  @extend .serif;
  font-size: 20px;
  line-height: 28px;
  color: #222;
}

h1, h2, h3 {
  @extend .serif-display;
}

h1 {
  font-style: italic;
  font-size: 60px;
  line-height: 60px;
}

.major {
  font-size: 10vw;
  line-height: 14vw;
}
