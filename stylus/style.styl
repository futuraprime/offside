@import nib;

global-reset();

@import colors;
@import typography;

html {
  height: 100%;
}

body {
  background-color: c_steel;
  height: 100%;
}

#interactive {
  width: 100%;
  height: 400px;
  background-color : inherit;
  padding: 10px 0;
}

.interactive-link {
  text-decoration: none;
  color: inherit;
  background-color: #B7B4B4;
  border-radius: 20px;
  padding: 0 5px;
}

.flag-preload:after {
  content: url('../assets/flags_uk.png');
  position: absolute;
  left: -999px;
}

#soccer_link {
  &:after {
    margin-left: .33em;
    content: url('../assets/flags_us.png');
    vertical-align: middle;
    
  }
  &.football-mode:after {
    content: url('../assets/flags_uk.png');
  }
}

.credits {
  @extend .sans;
  text-align: center;
  font-size: 14px;
  font-weight: 400;
  background-color: rgba(255,255,255,.6);
  padding: 10px 20px;
}
