@import nib;

global-reset();

@import colors;
@import typography;

html {
  height: 100%;
}

body {
  background-color: c_steel;
  height: 100%;
}

#interactive {
  width: 100%;
  height: 400px;
}

.interactive-link {
  text-decoration: none;
  color: inherit;
  background-color: #B7B4B4;
  border-radius: 20px;
  padding: 0 5px;
}

#soccer_link {
  &:after {
    margin-left: .33em;
    content: url('../assets/flags_us.png');
    vertical-align: middle;
    
  }
  &.football-mode:after {
    content: url('../assets/flags_uk.png');
  }
}
